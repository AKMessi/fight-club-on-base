shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true
# IGNORE OPTIONAL DEPENDENCIES (Stops the C++ build crashes on Windows ARM)
optional=false

# DISABLE AUDIT & FUND (Speeds up install, reduces noise)
audit=false
fund=false

# STRICT PEER DEPS (Forces NPM to resolve versions cleanly)
legacy-peer-deps=true